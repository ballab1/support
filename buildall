#!/bin/bash

declare -r TOOLS="$( cd "$( dirname "${BASH_SOURCE[0]}" )/libs" && pwd )"   
source "${TOOLS}/loadLibraries.sh"

#jira-fd-kafka
#jenkins-build-events
#nginx_alt

declare -a modules=(base_container
                    supervisord
                    cesi
                    nginx_base
                    php5
                    php7
                    openjdk
                    hubot
                    jenkins
                    kafka-broker
                    kafka-manager
                    kafka-zookeeper
                    mysql
                    nagios
                    nginx_proxy
                    phpmyadmin
                    webdav
                    zenphoto
                    perl
                    perl-carton
                    files-kafka
                    files-librd
                    movefiles
                    alpinefull
                    postgresql
                    openjre
                    gradle
                    nodervisor
                    supervisord-monitor )

cd "$TOOLS/.."
[ $# -gt 0 ] && modules=( "$@" )
build.allContainers "${modules[@]}"

