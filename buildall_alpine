export PERL_VERSION=5.26.2
export CPANIMUS_VERSION=1.7044
export PHP5_VERSION=5.6.37-r0
export PHP7_VERSION=7.2.8-r1
export PHPMYADMIN_VERSION=4.8.3
export POSTGRES_VERSION=10.5
export QUANTILE_VERSION=1.1.2
export TIMESCALEDB_VERSION=0.11.0
export SMONITOR_VERSION=v1.1.0
export ZOOKEEPER_VERSION=3.4.13


cd "$TOOLS/.."
[ $# -gt 0 ] && modules=( "$@" )
export OS=alpine/
build.allContainers "${modules[@]}"

